{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=betfred.db"
  },
  "Jwt": {
    "Key": "ThisIsA32CharacterLongSuperSecret!!",
    "Issuer": "betfred-demo",
    "Audience": "betfred-demo",
    "ExpirationHours": 2
  },
  "ClassificationApi": {
    "BaseUrl": "http://localhost:8001/",
    "TimeoutSeconds": 60
  },
  "FileUpload": {
    "MaxFileSizeBytes": 10485760,
    "AllowedContentTypes": ["image/jpeg", "image/png"]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "bet_fred.Services.ThresholdHostedService": "Information",
        "bet_fred.Services.ThresholdEvaluator": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/log-.txt", "rollingInterval": "Day" }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}